<p id="notice"><%= notice %></p>

<h1>Product</h1>

<p>
  <strong>Product name:</strong>
  <%= @product.product_name %>
</p>

<p>
  <strong>Avg rating:</strong>
  <%= @product.avg_rating %>
</p>

<p>
  <strong>Asin:</strong>
  <%= @product.asin %>
</p>

<h2>Reviews</h2>

<% @product.reviews.each do |review| %>
  <p><%= review.review_header %></p>
  <p><%= review.reviewer %></p>
  <p><%= review.rating %></p>
  <p><%= review.review_body%></p>
  <hr>
<% end %>

<%= form_for [@product, @review] do |f| %>
  <div>
    <%= f.label :review_header %>
    <%= f.text_field :review_header %>
    <br>
    <%= f.label :reviewer %>
    <%= f.text_field :reviewer %>
    <br>
    <%= f.label :rating %>
    <%= f.text_field :rating %>
    <br>
    <%= f.label :review_body %>
    <%= f.text_area :review_body %>
    <br>
  </div>
  <%= f.submit %>
<% end %>

<br><br>
<%= link_to 'Edit', edit_product_path(@product) %> |
<%= link_to 'Back', products_path %>
